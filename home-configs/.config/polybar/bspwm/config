[colors]
; argb
bg      = #55000000
black   = #000000
yellow  = #fdcf58
gray    = #757676
lorange = #f27d0c
dorange = #f07f13
dred    = #7f0000
dgreen  = #005f00
dblue   = #005992
white   = #ffffff
lblue   = #443c9eff
none    = #00000000

[bar/main]
monitor = eDP-1
override-redirect = false
bottom = false

fixed-center = true

width = 100%
height = 30 

offset-x = 0
offset-y = 0

background = ${colors.bg}
foreground = ${colors.black}

line-size   = 2
line-color  = ${colors.white}

border-bottom-size = 1
border-bottom-color = ${colors.black}

padding = 1
module-margin-left = 7
module-margin-right = 0

font-0 = "Roboto:size=13;2"
; font-0 = "Overpass Mono:size=11:weight=bold;2"
font-1 = "FontAwesome:size=11;2"
; font-2 = "Overpass:size=11;2"

modules-left = bspwm music
modules-center = wifi memory cpu temperature
modules-right = updates date caffeine volume battery powermenu

dim-value = 1.0

wm-restack = bspwm


[global/wm]
; Adjust the _NET_WM_STRUT_PARTIAL top value
;   Used for top aligned bars
margin-bottom = 0

; Adjust the _NET_WM_STRUT_PARTIAL bottom value
;   Used for bottom aligned bars
margin-top = 0


[settings]
; The throttle settings lets the eventloop swallow up til X events
; if they happen within Y millisecond after first event was received.
; This is done to prevent flood of update event.
;
; For example if 5 modules emit an update event at the same time, we really
; just care about the last one. But if we wait too long for events to swallow
; the bar would appear sluggish so we continue if timeout
; expires or limit is reached.
throttle-output = 5
throttle-output-for = 10

; Time in milliseconds that the input handler will wait between processing events
throttle-input-for = 30

; Reload upon receiving XCB_RANDR_SCREEN_CHANGE_NOTIFY events
screenchange-reload = true


[module/bspwm]
type = internal/bspwm

pin-workspaces = false
inline-mode = false
enable-click = true
enable-scroll = false

label-font = 2

;ws-icon-[0-9]+ = label;icon
ws-icon-0 = home;
ws-icon-1 = browse;
ws-icon-2 = files;
ws-icon-3 = mail;
ws-icon-4 = code;
ws-icon-5 = android;
ws-icon-6 = music;
ws-icon-7 = vbox;
ws-icon-8 = edit;
ws-icon-9 = empty2;
ws-icon-default = 

format = <label-state>

label-monitor = %name%
label-monitor-font = 3

label-focused = %icon%
label-focused-background = ${colors.dblue}
label-focused-foreground = ${colors.white}
label-focused-overline= ${colors.white}
label-focused-underline= ${colors.white}
label-focused-padding = 1

label-occupied = %icon%
label-occupied-foreground = ${colors.dblue}
label-occupied-padding = 1

label-dimmed-foreground = ${colors.dblue}
label-dimmed-focused-background = ${colors.gray}

label-urgent = %icon%
label-urgent-background = ${colors.dblue}
label-urgent-padding = 1

label-empty = %icon%
label-empty-foreground = ${colors.lblue}
label-empty-padding = 1


[module/wifi]
type = internal/network
interface = wlp2s0
interval = 5
;udspeed-minwidth = 3

format-connected = <label-connected>
label-connected = %signal%   %local_ip%
label-connected-foreground = ${colors.dgreen}
label-connected-font = 3

format-disconnected = <label-disconnected>
label-disconnected = 
label-disconnected-foreground = ${colors.dred}

format-packetloss = <animation-packetloss>
animation-packetloss-0 = 
animation-packetloss-0-foreground = ${colors.dgreen}
; Framerate in milliseconds
animation-packetloss-framerate = 500


[module/date]
type = internal/date
label =  %date%  %time%
label-foreground = ${colors.dred}
date = %a %d.%m.
time = %H:%M
interval = 5


[module/volume]
type = internal/volume
;speaker-mixer = Speaker
;headphone-mixer = Headphone
;headphone-id = 28

